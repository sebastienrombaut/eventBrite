<div align="center">
<h1>Ici on t'affiche : User <%=@user.id%> </h1>
<h2>Nom : <%=@user.name%> </h2>


<% unless @user.created_events.empty? %>
<h2><%=@user.name%>, tu as crée les Events suivant : </h2>

<table>
  	<tr>
  	  <th scope="col" style="text-align: center">Description de l'Event </th>
   	  <th scope="col" style="text-align: center">Date  </th>
   	  <th scope="col" style="text-align: center">Lieu  </th>
   
  	</tr>
  
  	<% @user.created_events.each do |event| %>
    <tr>
	    <td style="text-align: center"><%= event.description %></td>
      <td style="text-align: center"><%= event.date.strftime("%d/%m/%Y") %></td>
      <td style="text-align: center"><%= event.place %></td>

    </tr>
    <% end %>
    </table>
  <% end %>
</br>


<% unless @user.attended_events.empty? %>
<h2><%=@user.name%>, tu as participé aux Events suivant : </h2>

<table>
    <tr>
      <th scope="col" style="text-align: center">Description de l'Event </th>
      <th scope="col" style="text-align: center">Date  </th>
      <th scope="col" style="text-align: center">Lieu  </th>
   
    </tr>
  
    <% @user.attended_events.each do |event| %>
    <% if event.date < Date.today %>
    <tr>
      <td style="text-align: center"><%= event.description %></td>
      <td style="text-align: center"><%= event.date.strftime("%d/%m/%Y") %></td>
      <td style="text-align: center"><%= event.place %></td>

    </tr>
    <% end %>
    <% end %>
    </table>
    
<% end %>

<% unless @user.attended_events.empty? %>
<h2><%=@user.name%>, tu vas participer aux Events suivant : </h2>

<table>
    <tr>
      <th scope="col" style="text-align: center">Description de l'Event </th>
      <th scope="col" style="text-align: center">Date  </th>
      <th scope="col" style="text-align: center">Lieu  </th>
   
    </tr>
  
    <% @user.attended_events.each do |event| %>
    <% if event.date > Date.today %>
    <tr>
      <td style="text-align: center"><%= event.description %></td>
      <td style="text-align: center"><%= event.date.strftime("%d/%m/%Y") %></td>
      <td style="text-align: center"><%= event.place %></td>

    </tr>
    <% end %>
    <% end %>
    </table>
  
<% end %>

<p><%= link_to "Go index", users_path, class: "btn btn-info" %></p>
<% if @user == current_user %>
<p><%= link_to "Deconnexion", logout_path, class: "btn btn-info", method: :delete %></p>
<% end %>

</div>
      

